		"@tanstack/react-query": "^5.83.0",
		"@tanstack/react-query-devtools": "^5.83.0",
		"bcryptjs": "^3.0.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.1.1",
		"date-fns": "^4.1.0",
		"lucide-react": "^0.525.0",
		"motion": "^12.23.0",
		"next": "15.4.1",
		"next-auth": "^4.24.11",
		"prisma": "^6.12.0",
		"react": "19.1.0",
		"react-day-picker": "^9.8.0",
		"react-dom": "19.1.0",
